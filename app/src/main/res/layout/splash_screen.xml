<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".splash_screen">

    <ImageView
        android:src="@drawable/splash_screen_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="@string/splash_screen_btnAddPlayer"
        android:width="180dp"
        android:height="65dp"
        android:textSize="35sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_alignParentTop="false"
        android:layout_alignWithParentIfMissing="false"
        android:layout_alignParentBottom="false"
        android:layout_marginTop="30dp"
        android:id="@+id/splash_screen_btnAddPlayer"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="@string/splash_screen_btnViewPlayer"
        android:width="180dp"
        android:height="65dp"
        android:textSize="35sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignWithParentIfMissing="false"
        android:id="@+id/splash_screen_btnViewPlayer"
        android:layout_below="@+id/splash_screen_btnAddPlayer"
        android:layout_alignRight="@+id/splash_screen_btnAddPlayer"
        android:layout_alignEnd="@+id/splash_screen_btnAddPlayer"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="@string/splash_screen_btnGameList"
        android:width="180dp"
        android:height="65dp"
        android:textSize="35sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignWithParentIfMissing="false"
        android:id="@+id/splash_screen_btnAddGame"
        android:layout_below="@+id/splash_screen_btnViewPlayer"
        android:layout_alignRight="@+id/splash_screen_btnViewPlayer"
        android:layout_alignEnd="@+id/splash_screen_btnViewPlayer"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
